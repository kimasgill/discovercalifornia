<% include ./partials/header %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= gallery.title %></div>
	<form class="ui form" action="/galleries/<%= gallery._id %>?_method=PUT" method="POST">
	<div class="field">
		<label>Title</label> 
		<input type="text" name="gallery[title]" value="<%= gallery.title %>">
	</div>
	<div class="field">
		<label>Image</label>
		<input type="text" name="gallery[image]" value="<%= gallery.image %>" >
	</div>
	<div class="field">
		<label>Location Description</label>
		<textarea name="gallery[body]"><%= gallery.body %></textarea>
		<!-- <input type="text" name="gallery[body]" placeholder="location description goes here"> -->
	</div>
		<input class="ui teal big basic button" type="submit">
	</form>
</div>
<% include ./partials/footer %>